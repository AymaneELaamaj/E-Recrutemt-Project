@model Candidature
@{
    ViewData["Title"] = "Détails de la Candidature";
}

<div class="container mt-4">
    <h2>Détails de la Candidature</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h4>Informations sur l'offre</h4>
            <div class="row">
                <div class="col-md-6 text-dark">
                    <p><strong>Poste :</strong> @Model.Offre.Poste</p>
                    <p><strong>Entreprise :</strong> @Model.Offre.Recruteur.Nom</p>
                    <p><strong>Type de contrat :</strong> @Model.Offre.TypeContrat</p>
                    <p><strong>Secteur :</strong> @Model.Offre.Secteur</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Profil requis :</strong> @Model.Offre.Profil</p>
                    <p><strong>Rémunération :</strong> @Model.Offre.Remuneration €</p>
                    <p><strong>Date de candidature :</strong> @Model.DatePostulation.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4>Actions</h4>
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            <a asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger"
               onclick="return confirm('Êtes-vous sûr de vouloir annuler cette candidature ?')">
                Annuler la candidature
            </a>
        </div>
    </div>
</div>