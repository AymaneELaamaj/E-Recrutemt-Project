@model IEnumerable<Candidature>
@{
    ViewData["Title"] = "Mes Candidatures";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mes Candidatures</h2>
        <div>
            <a asp-controller="Offre" asp-action="Index" class="btn btn-primary">
                Voir les offres disponibles
            </a>
            <a asp-action="Create" class="btn btn-success">
                Nouvelle Candidature
            </a>
        </div>

        
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Poste</th>
                            <th>Entreprise</th>
                            <th>Type Contrat</th>
                            <th>Date Postulation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var candidature in Model)
                        {
                            <tr>
                                <td>@candidature.Offre.Poste</td>
                                <td>@candidature.Offre.Recruteur.Nom</td>
                                <td>@candidature.Offre.TypeContrat</td>
                                <td>@candidature.DatePostulation.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@candidature.Id"
                                           class="btn btn-info btn-sm">Détails</a>
                                        <a asp-action="Delete" asp-route-id="@candidature.Id"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Êtes-vous sûr de vouloir annuler cette candidature ?')">
                                            Annuler
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>