@model IEnumerable<Recrutment.Models.Candidature>

@{
    ViewData["Title"] = "Mes Candidatures";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Mes Candidatures</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Aucune candidature trouvée.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom du Candidat</th>
                        <th scope="col">Offre</th>
                        <th scope="col">CV</th>
                        <th scope="col">Date de Candidature</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidature in Model)
                    {
                        <tr>
                            <td>@candidature.Candidat?.Nom</td>
                            <td>@candidature.Offre?.Poste</td>
                            <td>
                                @if (!string.IsNullOrEmpty(candidature.Candidat?.CV))
                                {
                                    <a href="@Url.Action("DownloadCV", "Candidats", new { id = candidature.Candidat.Id })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-download"></i> Télécharger CV
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Aucun CV</span>
                                }
                            </td>
                            <td>@candidature.DatePostulation.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Optional: Add a button to go back or navigate to other sections -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à l'accueil
        </a>
    </div>
</div>

<!-- Optional: Add some custom CSS for better styling -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
</style>