@model Recrutment.Models.Candidats

@{
    ViewData["Title"] = "Postuler à une offre";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" name="offreId" value="@ViewBag.OffreId" />

    <div class="form-group">
        <label>Nom</label>
        <input asp-for="Nom" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Prénom</label>
        <input asp-for="Prenom" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Âge</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label>Titre</label>
        <input asp-for="Titre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Diplôme</label>
        <input asp-for="Diplome" class="form-control" />
    </div>

    <div class="form-group">
        <label>Années d'expérience</label>
        <input asp-for="AnneeExperience" class="form-control" />
    </div>

    <div class="form-group">
        <label>CV (PDF seulement)</label>
        <input type="file" name="CVFile" class="form-control" accept=".pdf" />
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a href="@Url.Action("Index", "Offre")" class="btn btn-secondary">Annuler</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   
}