@model IEnumerable<dynamic> 
<h2>Liste des Utilisateurs</h2>

@if (!Model.Any())
{
    <p>Aucun utilisateur trouvé.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Rôle</th> <!-- Optionnel, si vous voulez l'ajouter -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td> <!-- Rôle peut être récupéré si nécessaire -->
                        @* Vous pouvez ajouter ici le rôle si vous le souhaitez, par exemple : *@
                        @* var roles = await _userManager.GetRolesAsync(user); *@
                        Recruteur <!-- Vous pouvez afficher dynamiquement le rôle ici si nécessaire. -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
