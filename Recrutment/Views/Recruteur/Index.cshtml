@model IEnumerable<Recrutment.Models.Recruteur>
@{
    ViewData["Title"] = "Liste des recruteurs";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        @foreach (var recruteur in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <!-- Header Section: Nom & Email -->
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar bg-info text-white rounded-circle d-flex justify-content-center align-items-center" style="width: 60px; height: 60px; font-size: 24px;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <div class="ms-3">
                                <h5 class="card-title fw-bold mb-1">@recruteur.Nom</h5>
                                <p class="text-muted mb-0" style="font-size: 14px;">@recruteur.Email</p>
                            </div>
                        </div>

                        <!-- Details Section -->
                        <p class="text-muted" style="font-size: 14px;">
                            <strong>Téléphone :</strong> @recruteur.Tel<br />
                            <strong>Nombre d'offres :</strong> @(recruteur.Offres?.Count ?? 0)
                        </p>

                        <!-- Footer Section: Actions -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new { id = recruteur.Id })">
                                <i class="bi bi-eye"></i> Voir détails
                            </a>
                            <div>
                                <a class="btn btn-outline-success btn-sm me-2" href="@Url.Action("Edit", new { id = recruteur.Id })">
                                    <i class="bi bi-pencil-fill"></i> Modifier
                                </a>
                                <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Delete", new { id = recruteur.Id })">
                                    <i class="bi bi-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-4 text-center">
    <a class="btn btn-success btn-lg" href="@Url.Action("Create")">
        <i class="bi bi-person-plus-fill"></i> Créer un nouveau recruteur
    </a>
</div>
