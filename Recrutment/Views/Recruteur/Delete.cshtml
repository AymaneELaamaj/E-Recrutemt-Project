@model Recrutment.Models.Recruteur

@{
    ViewData["Title"] = "Supprimer un recruteur";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <p>Êtes-vous sûr de vouloir supprimer le recruteur suivant ?</p>
    <ul>
        <li><strong>Nom :</strong> @Model.Nom</li>
        <li><strong>Email :</strong> @Model.Email</li>
        <li><strong>Téléphone :</strong> @Model.Tel</li>
    </ul>
</div>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
</form>
