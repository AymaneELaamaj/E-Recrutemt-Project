<h2>Statistiques</h2>
<table>
    <thead>
        <tr>
            <th>Offre</th>
            <th>Nombre de Candidatures</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model)
        {
            <tr>
                <td>@stat.Offre</td>
                <td>@stat.NombreCandidatures</td>
            </tr>
        }
    </tbody>
</table>
